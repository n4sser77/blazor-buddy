@inherits ComponentBase
@rendermode InteractiveServer

<div class="drawer-overlay @(_open ? "open" : "")" @onclick="Close"></div>

<div class="drawer-panel @(_open ? "open" : "")" role="dialog" aria-modal="true">

    <div class="drawer-header">
        <h3>@Title</h3>
        <button class="drawer-close" aria-label="Close" @onclick="Close">
            &times;
        </button>
    </div>

    <div class="drawer-body">
        @Body
    </div>

    @if (Footer != null)
    {
        <div class="drawer-footer">
            @Footer
        </div>
    }
</div>

@code {
    private bool _open;

    [Parameter] public string Title { get; set; } = "Details";
    [Parameter] public RenderFragment? Body { get; set; }
    [Parameter] public RenderFragment? Footer { get; set; }

    // Allows the parent to trigger the drawer
    public void Open()
    {
        _open = true;
        StateHasChanged();
    }

    public void Close()
    {
        _open = false;
        StateHasChanged();
    }
}